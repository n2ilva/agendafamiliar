rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Fotos de perfil: formato profilePictures/{userId}-{timestamp}.jpg
    match /profilePictures/{allFiles=**} {
      // Qualquer usuário autenticado pode ler fotos de perfil
      allow read: if request.auth != null;

      // Upload/atualização: validar tipo de arquivo e tamanho
      allow write: if request.auth != null
                   && request.resource != null
                   && request.resource.contentType.matches('image/.*')
                   && request.resource.size < 5 * 1024 * 1024; // Limite de 5MB

      // Deletar: apenas usuários autenticados (deletarão suas próprias fotos pelo código)
      allow delete: if request.auth != null;
    }

    // Bloqueia todos os outros caminhos
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}