rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // ========================================
    // FOTOS DE PERFIL
    // Formato: profilePictures/{userId}-{timestamp}.jpg
    // ========================================
    match /profilePictures/{fileName} {
      // Helper: extrai o userId do nome do arquivo (antes do primeiro "-")
      function getFileOwnerId() {
        return fileName.split('-')[0];
      }
      
      // Leitura: qualquer usuário autenticado pode ver fotos de perfil
      allow read: if request.auth != null;

      // Upload: apenas o próprio usuário pode enviar sua foto
      // Validações: tipo de imagem, tamanho máximo 5MB, nome deve começar com seu userId
      allow write: if request.auth != null
                   && request.auth.uid == getFileOwnerId()
                   && request.resource != null
                   && request.resource.contentType.matches('image/(jpeg|png|gif|webp)')
                   && request.resource.size < 5 * 1024 * 1024;

      // Deletar: apenas o próprio usuário pode deletar sua foto
      allow delete: if request.auth != null
                    && request.auth.uid == getFileOwnerId();
    }

    // ========================================
    // BLOQUEIA TODOS OS OUTROS CAMINHOS
    // ========================================
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}